    <div class="absolute top-0 left-0 w-[40rem] h-[40rem] rounded-full bg-[#F5E0D0]/15 blur-[120px] -translate-y-1/3 -translate-x-1/4 pointer-events-none" aria-hidden="true"></div>

    <div class="container-main relative z-10">

      <!-- Section heading -->
      <div class="text-center max-w-2xl mx-auto mb-10 md:mb-14">
        <p class="scroll-reveal text-xs md:text-sm font-medium uppercase tracking-[0.25em] text-terracotta mb-4">Real Results</p>
        <h2 class="scroll-reveal text-[clamp(1.8rem,4.5vw,3.2rem)] font-black leading-[1.1] tracking-[-0.02em] text-charcoal">
          Stories that speak for <span class="text-sage">themselves.</span>
        </h2>
      </div>

      <!-- Masonry-style grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-5 md:gap-6 testimonial-grid">
        {gridTestimonials.map((t, i) => {
          const accent = cardAccents[i];
          const accentColorMap = {
            sage: '#5B8C6F',
            terracotta: '#C47D5A',
            earth: '#8B7355',
          };
          const isHighlighted = i % 3 === 1;
          return (
            <div
              class={`scroll-reveal bg-white rounded-[1.5rem] border border-sage-pale/40 shadow-sm overflow-hidden flex flex-col ${isHighlighted ? 'md:-translate-y-3' : ''}`}
              style={`transition-delay: ${i * 0.08}s;`}
            >
              <!-- Colored top bar -->
              <div class="h-1.5 w-full" style={`background-color: ${accentColorMap[accent]};`} aria-hidden="true"></div>

              <div class="p-7 flex flex-col flex-1">
                <!-- 5-star rating -->
                <div class="flex gap-0.5 mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-terracotta" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  ))}
                </div>

                <!-- Quote -->
                <blockquote class="text-sm md:text-base text-text leading-relaxed mb-5 flex-1">
                  "{t.quote}"
                </blockquote>

                <!-- Footer -->
                <div class="flex items-center gap-3 pt-4 border-t border-sage-pale/30">
                  <div class="w-9 h-9 rounded-full flex items-center justify-center shrink-0" style={`background-color: ${accentColorMap[accent]}20;`}>
                    <span class="text-sm font-bold" style={`color: ${accentColorMap[accent]};`}>{t.name.charAt(0)}</span>
                  </div>
                  <div class="min-w-0">
                    <p class="font-bold text-charcoal text-sm">{t.name}</p>
                    <div class="flex flex-wrap items-center gap-2 mt-0.5">
                      <span
                        class="inline-block text-[11px] font-semibold px-2.5 py-0.5 rounded-full"
                        style={`background-color: ${accentColorMap[accent]}15; color: ${accentColorMap[accent]};`}
                      >
                        {t.condition}
                      </span>
                      <span class="text-[11px] text-text-light">{t.doctor}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- ==================== S4 — CONDITIONS MENTIONED ==================== -->
  <section class="section-padding bg-white relative overflow-hidden">
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[50rem] h-[50rem] rounded-full bg-sage-pale/15 blur-[120px] translate-y-1/2 pointer-events-none" aria-hidden="true"></div>

    <div class="container-main relative z-10">
      <div class="text-center max-w-3xl mx-auto">

        <p class="scroll-reveal text-xs md:text-sm font-medium uppercase tracking-[0.25em] text-sage mb-4">What Brought Them In</p>
        <h2 class="scroll-reveal text-[clamp(1.8rem,4.5vw,3rem)] font-black leading-[1.1] tracking-[-0.02em] text-charcoal mb-8">
          Conditions our patients <span class="text-sage">came in with.</span>
        </h2>

        <!-- Condition pills -->
        <div class="scroll-reveal flex flex-wrap justify-center gap-3">
          {conditions.map((c, i) => {
            const pillColors = [
              { bg: 'bg-sage-pale/40', text: 'text-sage-dark', border: 'border-sage-pale/60' },
              { bg: 'bg-[#F5E0D0]/40', text: 'text-terracotta', border: 'border-[#F5E0D0]/60' },
              { bg: 'bg-[#E8D5C8]/40', text: 'text-earth', border: 'border-[#E8D5C8]/60' },
            ];
            const color = pillColors[i % 3];
            return (
              <a
                href="/conditions"
                class={`inline-flex items-center gap-2 ${color.bg} ${color.text} border ${color.border} rounded-full px-5 py-2.5 text-sm font-semibold transition-all duration-300 hover:shadow-md hover:-translate-y-0.5`}
              >
                <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
                {c}
              </a>
            );
          })}
        </div>

        <!-- Link to conditions -->
        <div class="scroll-reveal mt-8">
          <a href="/conditions" class="inline-flex items-center gap-2 text-sage font-semibold text-sm hover:text-sage-dark transition-colors duration-300 group">
            View all conditions we treat
            <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

      </div>
    </div>
  </section>

  <!-- ==================== S5 — GOOGLE REVIEWS CTA ==================== -->
  <section class="section-padding bg-[#1a2516] relative overflow-hidden">
    <!-- Subtle radial glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[50rem] h-[50rem] rounded-full bg-sage/8 blur-[100px] pointer-events-none" aria-hidden="true"></div>

    <div class="container-main relative z-10">
      <div class="text-center max-w-2xl mx-auto">

        <!-- Large rating -->
        <div class="scroll-reveal mb-4">
          <span class="text-[5rem] md:text-[6rem] font-black leading-none text-white">4.9</span>
        </div>

        <!-- Stars -->
        <div class="scroll-reveal flex justify-center gap-1.5 mb-6">
          {[...Array(5)].map(() => (
            <svg class="w-7 h-7 text-terracotta" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
