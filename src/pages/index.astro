<script>
  // ===== 3D TILT ON PHOTO =====
  const tiltCard = document.querySelector('.tilt-card');
  if (tiltCard && window.innerWidth >= 1024) {
    const maxTilt = 18;
    // Resting state — noticeable backward lean
    tiltCard.style.transform = 'perspective(400px) rotateX(6deg) rotateY(-4deg) scale(0.98)';
    tiltCard.style.boxShadow = '8px -4px 50px rgba(45,45,45,0.2)';
    tiltCard.addEventListener('mousemove', (e) => {
      const rect = tiltCard.getBoundingClientRect();
      const x = (e.clientX - rect.left) / rect.width;
      const y = (e.clientY - rect.top) / rect.height;
      const rotateY = (x - 0.5) * maxTilt * 2;
      const rotateX = (0.5 - y) * maxTilt * 2;
      tiltCard.style.transform = `perspective(400px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.03)`;
      tiltCard.style.boxShadow = `${-rotateY * 4}px ${rotateX * 4}px 50px rgba(45,45,45,0.22)`;
    });
    tiltCard.addEventListener('mouseleave', () => {
      tiltCard.style.transform = 'perspective(400px) rotateX(6deg) rotateY(-4deg) scale(0.98)';
      tiltCard.style.boxShadow = '8px -4px 50px rgba(45,45,45,0.2)';
    });
  }

  // ===== MAGNETIC CTA BUTTONS =====
  document.querySelectorAll('.magnetic-btn').forEach((btn) => {
    if (window.innerWidth < 1024) return;
    const strength = 0.3;
    btn.addEventListener('mousemove', (e) => {
      const rect = btn.getBoundingClientRect();
      const x = e.clientX - rect.left - rect.width / 2;
      const y = e.clientY - rect.top - rect.height / 2;
      btn.style.transform = `translate(${x * strength}px, ${y * strength}px)`;
    });
    btn.addEventListener('mouseleave', () => {
      btn.style.transform = 'translate(0, 0)';
    });
  });

  // ===== DOCTOR NAME TYPEWRITER =====
  const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  document.querySelectorAll('.typewriter').forEach((el) => {
    const text = el.getAttribute('data-text');
    const delay = parseInt(el.closest('.doc-label')?.getAttribute('data-delay') || '800');

    if (prefersReduced) {
      el.textContent = text;
      el.classList.add('done');
      return;
    }

    let i = 0;
    setTimeout(() => {
      const interval = setInterval(() => {
        el.textContent = text.slice(0, i + 1);
        i++;
        if (i >= text.length) {
          clearInterval(interval);
          el.classList.add('done');
          // Show subtitle after typing finishes
          const subtitle = el.closest('.doc-label')?.querySelector('.doc-subtitle');
          if (subtitle) setTimeout(() => subtitle.classList.add('visible'), 150);
        }
      }, 65);
    }, delay);
  });

  // Show dividers at their scheduled time
  document.querySelectorAll('.doc-divider').forEach((el) => {
    const delay = parseInt(el.getAttribute('data-delay') || '1000');
    if (prefersReduced) {
      el.classList.add('visible');
      return;
    }
    setTimeout(() => el.classList.add('visible'), delay);
  });

  // ===== BENTO CARD TILT + GLOW =====
  document.querySelectorAll('.bento-tilt').forEach((card) => {
    if (window.innerWidth < 1024 || prefersReduced) return;

    // Add glow element
    const glow = document.createElement('div');
    glow.classList.add('bento-glow');
    card.appendChild(glow);

    const maxTilt = 8;
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = (e.clientX - rect.left) / rect.width;
      const y = (e.clientY - rect.top) / rect.height;
      const rotateY = (x - 0.5) * maxTilt * 2;
      const rotateX = (0.5 - y) * maxTilt * 2;
      card.style.transform = `perspective(600px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.02)`;
      // Move glow to cursor position
      glow.style.background = `radial-gradient(circle at ${x * 100}% ${y * 100}%, rgba(255,255,255,0.15) 0%, transparent 60%)`;
    });
    card.addEventListener('mouseleave', () => {
      card.style.transform = 'perspective(600px) rotateX(0) rotateY(0) scale(1)';
    });
  });

  // ===== SCROLL REVEAL (IntersectionObserver) =====
  const revealElements = document.querySelectorAll('.scroll-reveal');
  if (revealElements.length) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.15, rootMargin: '0px 0px -40px 0px' });
    revealElements.forEach((el) => {
      if (prefersReduced) {
        el.classList.add('visible');
      } else {
        observer.observe(el);
      }
    });
  }
</script>

<script>
  import { gsap } from 'gsap';

  // ===== CONDITION SCROLL — pure scroll listener + CSS transitions =====
  const conditionSteps = document.querySelectorAll('.condition-step');
  const conditionVisuals = document.querySelectorAll('.condition-visual');
  const isDesktop = window.innerWidth >= 1024;

  if (conditionSteps.length && conditionVisuals.length) {
    let currentIndex = 0;

    // Set first active
    conditionSteps[0].classList.add('active');
    conditionVisuals[0].classList.add('active');

    if (isDesktop) {
      // Scroll handler: which step is closest to 40% of viewport?
      function checkActiveStep() {
        const target = window.innerHeight * 0.4;
        let closest = 0;
        let minDist = Infinity;

        conditionSteps.forEach((step, i) => {
          const rect = step.getBoundingClientRect();
          const center = rect.top + rect.height * 0.3;
          const dist = Math.abs(center - target);
          if (dist < minDist) {
            minDist = dist;
            closest = i;
          }
        });

        if (closest !== currentIndex) {
          // Update left side
          conditionSteps.forEach((s, i) => s.classList.toggle('active', i === closest));
          // Update right side — CSS transitions handle the animation
          conditionVisuals.forEach((v, i) => v.classList.toggle('active', i === closest));

          // Animate bars on Hormones panel
          const activeVisual = conditionVisuals[closest];
          activeVisual.querySelectorAll('.condition-bar').forEach((bar) => {
            const targetWidth = bar.getAttribute('data-width') || '50%';
            gsap.fromTo(bar, { width: '0%' }, { width: targetWidth, duration: 1, ease: 'power2.out', delay: 0.2 });
          });

          // Animate counters on Autoimmune panel
          activeVisual.querySelectorAll('.condition-counter').forEach((counter) => {
            const target = parseInt(counter.getAttribute('data-target') || '0');
            const obj = { val: 0 };
            gsap.to(obj, {
              val: target,
              duration: 1.2,
              ease: 'power2.out',
              onUpdate: () => { counter.textContent = String(Math.round(obj.val)); }
            });
          });

          currentIndex = closest;
        }
      }

      // Use rAF-throttled scroll listener
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          ticking = true;
          requestAnimationFrame(() => {
            checkActiveStep();
            ticking = false;
          });
        }
      }, { passive: true });

      // Initial check
      checkActiveStep();
    }
  }
</script>

