---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: 'About Us', href: '/about' },
  { label: 'Our Doctors', href: '/doctors' },
  { label: 'New Patients', href: '/new-patients' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Reviews', href: '/reviews' },
  { label: 'FAQs', href: '/faqs' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];

const serviceLinks = [
  { label: 'Naturopathic Care', href: '/services/naturopathic-care' },
  { label: 'Integrative Care', href: '/services/integrative-care' },
  { label: 'Acupuncture', href: '/services/acupuncture' },
  { label: 'Lab & Testing', href: '/services/lab-testing' },
  { label: 'Virtual Care', href: '/virtual-care' },
];

const conditionLinks = [
  { label: 'Digestive Health', href: '/conditions/digestive-health' },
  { label: 'Hormonal Balance', href: '/conditions/hormonal-balance' },
  { label: 'Fertility Support', href: '/conditions/fertility' },
  { label: 'Chronic Pain', href: '/conditions/chronic-pain' },
  { label: 'Stress & Anxiety', href: '/conditions/stress-anxiety' },
  { label: 'Weight Management', href: '/conditions/weight-management' },
];

const hours = [
  { day: 'Monday', time: '9AM — 6PM' },
  { day: 'Tue — Thu', time: '8AM — 5PM' },
  { day: 'Friday', time: '9AM — 2PM' },
  { day: 'Sat — Sun', time: 'Closed' },
];
---

<footer class="bg-footer-bg text-footer-text" role="contentinfo">
  <!-- Email signup strip -->
  <div class="border-b border-white/8">
    <div class="container-main py-10 md:py-14">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6 md:gap-10">
        <div class="text-center md:text-left">
          <h3 class="font-display text-2xl md:text-3xl font-semibold text-white mb-1.5">Stay connected</h3>
          <p class="text-sm text-footer-text/80">Get weekly health tips, herb guides, and practice updates.</p>
        </div>
        <form class="flex w-full max-w-md gap-2" data-netlify="true" name="newsletter" method="POST">
          <input type="hidden" name="form-name" value="newsletter" />
          <label for="footer-email" class="sr-only">Email address</label>
          <input
            id="footer-email"
            type="email"
            name="email"
            required
            placeholder="your@email.com"
            class="flex-1 bg-white/8 border border-white/12 rounded-full px-5 py-3 text-sm text-white placeholder:text-white/40 focus:outline-none focus:ring-2 focus:ring-sage/50 focus:border-sage/50 transition-all"
          />
          <button
            type="submit"
            class="bg-sage hover:bg-sage-light text-white font-medium text-sm px-6 py-3 rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-sage/20 shrink-0"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Main footer content -->
  <div class="container-main py-14 md:py-18">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-12 gap-10 lg:gap-8">

      <!-- Brand column -->
      <div class="lg:col-span-4 space-y-5">
        <!-- Logo -->
        <a href="/" class="inline-flex items-center gap-2.5 group" aria-label="Love Your Health — Home">
          <div class="w-10 h-10 rounded-full bg-sage flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
            <svg class="w-5.5 h-5.5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22c-4-4-8-7.5-8-12a8 8 0 0 1 16 0c0 4.5-4 8-8 12z"/>
              <path d="M12 12c-2-2-4-4-4-6a4 4 0 0 1 8 0c0 2-2 4-4 6z" fill="currentColor" opacity="0.3"/>
            </svg>
          </div>
          <div class="leading-tight">
            <span class="block font-display text-xl font-semibold text-white tracking-tight">Love Your Health</span>
            <span class="block text-[10px] text-footer-text/60 uppercase tracking-[0.15em] font-medium">Natural Medicine</span>
          </div>
        </a>

        <p class="text-sm leading-relaxed text-footer-text/80 max-w-xs">
          Three naturopathic doctors, one collaborative team. Real answers for your health — in Tempe or from anywhere in Arizona via virtual visits.
        </p>

        <!-- Social icons -->
        <div class="flex gap-3">
          <a href="https://www.instagram.com/loveyourhealthnaturalmedicine" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white/6 hover:bg-sage/30 flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5" aria-label="Instagram">
            <svg class="w-[18px] h-[18px] text-footer-text" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://www.facebook.com/loveyourhealthnaturalmedicine" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white/6 hover:bg-sage/30 flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5" aria-label="Facebook">
            <svg class="w-[18px] h-[18px] text-footer-text" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="mailto:Hello@LoveYourHealthNaturalMedicine.com" class="w-10 h-10 rounded-xl bg-white/6 hover:bg-sage/30 flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5" aria-label="Email us">
            <svg class="w-[18px] h-[18px] text-footer-text" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </a>
          <a href="tel:4809140521" class="w-10 h-10 rounded-xl bg-white/6 hover:bg-sage/30 flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5" aria-label="Call us">
            <svg class="w-[18px] h-[18px] text-footer-text" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="lg:col-span-2">
        <h4 class="text-xs font-semibold uppercase tracking-[0.15em] text-white/90 mb-5">Quick Links</h4>
        <ul class="space-y-2.5">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-footer-text/70 hover:text-white transition-colors duration-200">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="lg:col-span-2">
        <h4 class="text-xs font-semibold uppercase tracking-[0.15em] text-white/90 mb-5">Services</h4>
        <ul class="space-y-2.5">
          {serviceLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-footer-text/70 hover:text-white transition-colors duration-200">
                {link.label}
                {link.href === '/virtual-care' && (
                  <span class="inline-block text-[9px] font-bold uppercase tracking-wider bg-sage/30 text-sage-light px-1.5 py-0.5 rounded-full ml-1.5">AZ-Wide</span>
                )}
              </a>
            </li>
          ))}
        </ul>

        <h4 class="text-xs font-semibold uppercase tracking-[0.15em] text-white/90 mb-5 mt-8">Conditions</h4>
        <ul class="space-y-2.5">
          {conditionLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-footer-text/70 hover:text-white transition-colors duration-200">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact & Hours -->
      <div class="lg:col-span-4">
        <h4 class="text-xs font-semibold uppercase tracking-[0.15em] text-white/90 mb-5">Visit Us</h4>

        <!-- Address -->
        <div class="space-y-4 mb-7">
          <div class="flex gap-3">
            <div class="w-9 h-9 rounded-lg bg-white/6 flex items-center justify-center shrink-0 mt-0.5">
              <svg class="w-4 h-4 text-sage-light" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-white/90 font-medium">Love Your Health Natural Medicine</p>
              <p class="text-sm text-footer-text/70">123 E Baseline Rd, Suite D208 #4</p>
              <p class="text-sm text-footer-text/70">Tempe, AZ 85283</p>
              <p class="text-xs text-footer-text/50 mt-1">2nd Floor · Mill Towne Center</p>
            </div>
          </div>

          <div class="flex gap-3">
            <div class="w-9 h-9 rounded-lg bg-white/6 flex items-center justify-center shrink-0">
              <svg class="w-4 h-4 text-sage-light" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/>
              </svg>
            </div>
            <div>
              <a href="tel:4809140521" class="text-sm text-white/90 font-medium hover:text-sage-light transition-colors">(480) 914-0521</a>
              <p class="text-xs text-footer-text/50">Call or text — we respond quickly</p>
            </div>
          </div>

          <div class="flex gap-3">
            <div class="w-9 h-9 rounded-lg bg-white/6 flex items-center justify-center shrink-0">
              <svg class="w-4 h-4 text-sage-light" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div>
              <a href="mailto:Hello@LoveYourHealthNaturalMedicine.com" class="text-sm text-white/90 font-medium hover:text-sage-light transition-colors break-all">Hello@LoveYourHealthNaturalMedicine.com</a>
            </div>
          </div>
        </div>

        <!-- Hours -->
        <h4 class="text-xs font-semibold uppercase tracking-[0.15em] text-white/90 mb-4">Hours</h4>
        <div class="space-y-1.5">
          {hours.map((h) => (
            <div class="flex justify-between items-center text-sm max-w-[260px]">
              <span class="text-footer-text/60">{h.day}</span>
              <span class:list={["font-medium", h.time === 'Closed' ? 'text-footer-text/40' : 'text-white/80']}>{h.time}</span>
            </div>
          ))}
        </div>
        <p class="text-xs text-footer-text/40 mt-2">By appointment only — same-day appointments available</p>
      </div>
    </div>
  </div>

  <!-- Trust badges row -->
  <div class="border-t border-white/6">
    <div class="container-main py-7">
      <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-3">
        <div class="flex items-center gap-2">
          <div class="flex text-terracotta">
            {[1,2,3,4,5].map(() => (
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            ))}
          </div>
          <span class="text-xs text-footer-text/70 font-medium">5.0 Google Rating</span>
        </div>
        <span class="hidden sm:inline text-footer-text/20">|</span>
        <span class="flex items-center gap-1.5 text-xs text-footer-text/70">
          <svg class="w-3.5 h-3.5 text-sage-light" fill="currentColor" viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
          Women-Owned
        </span>
        <span class="hidden sm:inline text-footer-text/20">|</span>
        <span class="flex items-center gap-1.5 text-xs text-footer-text/70">
          <svg class="w-3.5 h-3.5 text-sage-light" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          LGBTQ+ Friendly
        </span>
        <span class="hidden sm:inline text-footer-text/20">|</span>
        <span class="flex items-center gap-1.5 text-xs text-footer-text/70">
          <svg class="w-3.5 h-3.5 text-sage-light" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="3" width="20" height="14" rx="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
          Virtual Visits — All of Arizona
        </span>
      </div>
    </div>
  </div>

  <!-- Payment methods + legal -->
  <div class="border-t border-white/6">
    <div class="container-main py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <!-- Payment -->
        <div class="flex items-center gap-3">
          <span class="text-[10px] text-footer-text/40 uppercase tracking-wider">We accept</span>
          <div class="flex gap-1.5">
            {['Visa', 'Mastercard', 'Amex', 'Discover', 'HSA/FSA'].map((method) => (
              <span class="text-[10px] text-footer-text/50 bg-white/5 px-2 py-1 rounded">{method}</span>
            ))}
          </div>
        </div>

        <!-- Legal links -->
        <div class="flex items-center gap-4 text-xs text-footer-text/40">
          <a href="/privacy-policy" class="hover:text-footer-text/70 transition-colors">Privacy Policy</a>
          <span>·</span>
          <a href="/terms-and-conditions" class="hover:text-footer-text/70 transition-colors">Terms</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Copyright bar -->
  <div class="border-t border-white/4">
    <div class="container-main py-4">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-2 text-[11px] text-footer-text/30">
        <span>&copy; {currentYear} Love Your Health Natural Medicine. All rights reserved.</span>
        <span>
          Designed & built by
          <a href="https://skkyee.com" target="_blank" rel="noopener noreferrer" class="text-sage-light/60 hover:text-sage-light transition-colors font-medium">skkyee.com</a>
        </span>
      </div>
    </div>
  </div>
</footer>

<!-- Mobile sticky CTA bar -->
<div class="fixed bottom-0 left-0 right-0 z-40 sm:hidden bg-cream/95 backdrop-blur-lg border-t border-sage-pale/60 px-4 py-3 safe-area-bottom">
  <div class="flex gap-2">
    <a
      href="tel:4809140521"
      class="flex-1 flex items-center justify-center gap-1.5 border-2 border-sage-pale text-sage font-medium text-sm py-2.5 rounded-full transition-colors hover:bg-sage-pale/30"
      aria-label="Call us"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/>
      </svg>
      Call
    </a>
    <a
      href="/contact"
      class="flex-[2] flex items-center justify-center gap-1.5 bg-sage text-white font-medium text-sm py-2.5 rounded-full transition-all hover:bg-sage-dark"
    >
      Book a Visit
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</div>

<style>
  .safe-area-bottom {
    padding-bottom: max(0.75rem, env(safe-area-inset-bottom));
  }
</style>
